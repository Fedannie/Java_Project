<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="QUIT"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="19dp"
        android:id="@+id/quit_d"
        android:layout_height="25sp"
        android:background="@drawable/sheep_blue_button"
        android:layout_width="55sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_entry">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.33"
            android:padding="5dp" >

            <Button
                android:layout_width="10sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button16"
                android:onClick="onChoiceClick"
                android:layout_height="40sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button17"
                android:onClick="onChoiceClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button18"
                android:onClick="onChoiceClick" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.33"
            android:padding="5dp" >
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button19"
                android:onClick="onChoiceClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button20"
                android:onClick="onChoiceClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button21"
                android:onClick="onChoiceClick" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.33"
            android:padding="5dp" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button22"
                android:onClick="onChoiceClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button23"
                android:onClick="onChoiceClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight=".33"
                android:gravity="center"
                android:id="@+id/button24"
                android:onClick="onChoiceClick" />
            
        </TableRow>
    </TableLayout>


    <ImageView
        app:srcCompat="@drawable/favorites"
        android:layout_alignParentTop="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/favorites"
        android:scaleType="center"
        android:visibility="visible"
        android:id="@+id/live_c1" />

    <ImageView
        app:srcCompat="@drawable/favorites"
        android:id="@+id/live_c2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/favorites"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/live_c1"
        android:layout_toEndOf="@+id/live_c1" />

    <ImageView
        app:srcCompat="@drawable/favorites"
        android:id="@+id/live_c3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/favorites"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/live_c2"
        android:layout_toEndOf="@+id/live_c2" />


    <ImageView
        app:srcCompat="@drawable/favorites"
        android:id="@+id/live_c4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/favorites"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/live_c3"
        android:layout_toEndOf="@+id/live_c3" />

    <ImageView
        app:srcCompat="@drawable/favorites"
        android:id="@+id/live_c5"
        android:layout_alignParentTop="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/favorites"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_toRightOf="@+id/live_c4"
        android:layout_toEndOf="@+id/live_c4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layout_entry"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/quit_d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/entry"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="26sp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:background="@color/ELVBackground" />
    </LinearLayout>
</RelativeLayout>