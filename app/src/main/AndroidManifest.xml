<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.fedorova.polyglotte">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/sheep"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".DictActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".ExerciseActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".TranslatorActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".PhraseActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".PrefActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpFilterThemes">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpAddDict">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpSelectNativeLanguage">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpAddNewWord">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpWordWatcher">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:name=".RepeatWordActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:label=""
            android:name=".PopUpShowPhrase">
        </activity>

        <activity
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="sensor"
            android:label=""
            android:name=".ExerciseUniqueWord">
        </activity>

        <activity
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="sensor"
            android:label=""
            android:name=".ExerciseOneWordManyChoices">
        </activity>

        <activity
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="sensor"
            android:label=""
            android:name=".ExerciseConnect">
        </activity>

        <activity
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="sensor"
            android:label=""
            android:name=".ThemesActivity">
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Dialog"
            android:name=".PopUpAddTheme">
        </activity>

    </application>

</manifest>